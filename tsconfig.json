{
    "compilerOptions": {
        "target": "es6",
        "allowJs": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": [
            "es2021",
            "dom",
            "dom.iterable"
        ],
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "node_modules/@types",
            "@types"
        ],
        "resolveJsonModule": true
    },
    "include": ["src/**/*"]
}
